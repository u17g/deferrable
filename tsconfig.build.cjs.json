{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./dist-cjs",
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node",
    "verbatimModuleSyntax": false,
    "stripInternal": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts"
  ]
}


